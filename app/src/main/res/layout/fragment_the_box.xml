<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.statemachine.crossboxfrielas.TheBoxFragment">

    <ImageView
        android:id="@+id/top_image"
        android:src="@drawable/top_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/box_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Box dedicada ao treino funcional e crosstraining, como diversas atividades paralelas orientadas por professores credenciados nas diferentes modalidades."
        android:layout_below="@+id/top_image"/>

    <TextView
        android:id="@+id/box_description_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seja mais forte que as suas desculpas."
        android:layout_gravity="left|bottom"
        android:textSize="20dp"
        android:layout_below="@+id/box_description"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
